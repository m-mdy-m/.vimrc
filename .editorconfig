# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 120

# 2 space indentation for specific languages
[*.{yml,yaml,json}]
indent_size = 2

[*.{js,jsx,ts,tsx,vue}]
indent_size = 2

[*.{html,css,scss,sass}]
indent_size = 2

# Tab indentation for Makefiles
[Makefile]
indent_style = tab

# Go prefers tabs
[*.go]
indent_style = tab
indent_size = 4

# Python PEP 8
[*.py]
indent_size = 4
max_line_length = 79

# Ruby
[*.rb]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Documentation
[*.{txt,rst}]
max_line_length = off
