#!/bin/bash

set -e

# ═══════════════════════════════════════════════════════════════
# Configuration
# ═══════════════════════════════════════════════════════════════

BASE_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
ROOT_DIR="$(cd "$BASE_DIR/.." && pwd -P)"
CONFIG_DIR="${ROOT_DIR}/src"
PLUG_VIM="$HOME/.vim/autoload/plug.vim"
BACKUP_DIR="$HOME/.vim/backups"
source "${BASE_DIR}/colors"
source "${BASE_DIR}/logger"
source "${BASE_DIR}/display"

# Total setup steps
TOTAL_STEPS=9

# ═══════════════════════════════════════════════════════════════
# System Detection
# ═══════════════════════════════════════════════════════════════

detect_system() {
    if [[ "$OSTYPE" == "linux-gnu"* ]]; then
        if command -v apt &> /dev/null; then
            echo "debian"
        elif command -v pacman &> /dev/null; then
            echo "arch"
        elif command -v dnf &> /dev/null; then
            echo "fedora"
        elif command -v yum &> /dev/null; then
            echo "rhel"
        elif command -v zypper &> /dev/null; then
            echo "opensuse"
        elif command -v apk &> /dev/null; then
            echo "alpine"
        elif command -v xbps-install &> /dev/null; then
            echo "void"
        else
            echo "linux"
        fi
    elif [[ "$OSTYPE" == "darwin"* ]]; then
        echo "macos"
    elif [[ "$OSTYPE" == "cygwin" ]] || [[ "$OSTYPE" == "msys" ]] || [[ "$OSTYPE" == "win32" ]]; then
        echo "windows"
    else
        echo "unknown"
    fi
}

# ═══════════════════════════════════════════════════════════════
# Installation Functions
# ═══════════════════════════════════════════════════════════════

# Check prerequisites
check_prerequisites() {
    display_step 1 $TOTAL_STEPS "Checking system requirements"

    local system=$(detect_system)
    display_kv "System" "$system"

    # Check for essential tools
    local missing_tools=()

    if ! command -v curl &> /dev/null && ! command -v wget &> /dev/null; then
        missing_tools+=("curl or wget")
    fi

    if ! command -v git &> /dev/null; then
        missing_tools+=("git")
    fi

    if [ ${#missing_tools[@]} -gt 0 ]; then
        echo ""
        display_warning "Missing required tools: ${missing_tools[*]}"
        return 1
    fi

    display_success_item "All prerequisites met"
    echo ""
    sleep 0.5
    return 0
}

# Install Vim
install_vim() {
    display_step 2 $TOTAL_STEPS "Installing Vim"

    if command -v vim &> /dev/null; then
        local vim_version=$(vim --version | head -n1)
        display_success_item "Vim already installed: $vim_version"
        echo ""
        sleep 0.5
        return 0
    fi

    local system=$(detect_system)

    echo ""
    display_info "Installing Vim for $system..."
    echo ""

    case $system in
        "debian")
            sudo apt update &> /dev/null
            sudo apt install -y vim curl git &> /dev/null
            ;;
        "arch")
            sudo pacman -S --noconfirm vim curl git &> /dev/null
            ;;
        "fedora")
            sudo dnf install -y vim curl git &> /dev/null
            ;;
        "rhel")
            sudo yum install -y vim curl git &> /dev/null
            ;;
        "opensuse")
            sudo zypper install -y vim curl git &> /dev/null
            ;;
        "alpine")
            sudo apk add --no-cache vim curl git &> /dev/null
            ;;
        "void")
            sudo xbps-install -S vim curl git &> /dev/null
            ;;
        "macos")
            if command -v brew &> /dev/null; then
                brew install vim curl git &> /dev/null
            else
                display_error "Homebrew not found. Install from https://brew.sh"
                return 1
            fi
            ;;
        "windows")
            display_error "Windows detected. Please use WSL or install Vim manually"
            return 1
            ;;
        *)
            display_error "Unknown system. Please install Vim manually"
            return 1
            ;;
    esac

    if command -v vim &> /dev/null; then
        display_success_item "Vim installed successfully"
        echo ""
        return 0
    else
        display_error "Vim installation failed"
        return 1
    fi
}

# Backup existing configuration
backup_existing_config() {
    display_step 3 $TOTAL_STEPS "Backing up existing configuration"

    local backup_created=false

    # Create backup directory
    mkdir -p "$BACKUP_DIR"

    # Backup .vimrc
    if [ -f "$HOME/.vimrc" ]; then
        if [ -L "$HOME/.vimrc" ]; then
            display_info "Removing existing symlink"
            rm "$HOME/.vimrc"
        else
            local timestamp=$(date +%Y%m%d_%H%M%S)
            local backup_file="$BACKUP_DIR/.vimrc.backup.$timestamp"
            cp "$HOME/.vimrc" "$backup_file"
            display_success_item "Backed up .vimrc → $backup_file"
            backup_created=true
        fi
    fi

    # Backup .vim directory
    if [ -d "$HOME/.vim" ] && [ ! -L "$HOME/.vim" ]; then
        local timestamp=$(date +%Y%m%d_%H%M%S)
        local backup_dir="$BACKUP_DIR/.vim.backup.$timestamp"

        # Only backup if it's not our VEX installation
        if [ ! -f "$HOME/.vim/.vex" ]; then
            cp -r "$HOME/.vim" "$backup_dir"
            display_success_item "Backed up .vim → $backup_dir"
            backup_created=true
        fi
    fi

    if ! $backup_created; then
        display_info "No backup needed"
    fi

    echo ""
    sleep 0.5
    return 0
}

# Create necessary directories
create_directories() {
    display_step 4 $TOTAL_STEPS "Creating directory structure"

    local dirs=(
        "$HOME/.vim/autoload"
        "$HOME/.vim/plugged"
        "$HOME/.vim/sessions"
        "$HOME/.vim/undo"
        "$HOME/.vim/backups"
    )

    echo ""

    for dir in "${dirs[@]}"; do
        if [ ! -d "$dir" ]; then
            mkdir -p "$dir"
            display_success_item "$(basename $dir)"
        else
            display_list_item "$(basename $dir) (exists)"
        fi
    done

    # Mark as VEX installation
    touch "$HOME/.vim/.vex"

    echo ""
    sleep 0.5
    return 0
}

# Install vim-plug
install_vim_plug() {
    display_step 5 $TOTAL_STEPS "Installing vim-plug"

    if [ -f "$PLUG_VIM" ]; then
        display_success_item "vim-plug already installed"
        echo ""
        sleep 0.5
        return 0
    fi

    echo ""
    display_info "Downloading vim-plug..."

    mkdir -p "$(dirname "$PLUG_VIM")"

    if command -v curl &> /dev/null; then
        if curl -fLo "$PLUG_VIM" --create-dirs \
            https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim &> /dev/null; then
            display_success_item "vim-plug installed via curl"
            echo ""
            sleep 0.5
            return 0
        fi
    elif command -v wget &> /dev/null; then
        if wget -O "$PLUG_VIM" --no-check-certificate \
            https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim &> /dev/null; then
            display_success_item "vim-plug installed via wget"
            echo ""
            sleep 0.5
            return 0
        fi
    fi

    display_error "Failed to download vim-plug"
    return 1
}

# Setup vimrc symlink
setup_vimrc() {
    display_step 6 $TOTAL_STEPS "Linking configuration files"

    if [ ! -f "$CONFIG_DIR/.vimrc" ]; then
        display_error "Configuration file not found: $CONFIG_DIR/.vimrc"
        return 1
    fi

    echo ""

    # Create symlink
    ln -sf "$(realpath "$CONFIG_DIR/.vimrc")" "$HOME/.vimrc"
    display_success_item ".vimrc → $(realpath "$CONFIG_DIR/.vimrc")"

    # Verify symlink
    if [ -L "$HOME/.vimrc" ] && [ -f "$HOME/.vimrc" ]; then
        display_list_item "Symlink verified"
    else
        display_error "Symlink creation failed"
        return 1
    fi

    echo ""
    sleep 0.5
    return 0
}

# Setup default EditorConfig
setup_default_configs() {
    display_step 7 $TOTAL_STEPS "Setting up default configuration"

    echo ""

    # Copy default .editorconfig to templates
    if [ -f "${ROOT_DIR}/.editorconfig.default" ]; then
        cp "${ROOT_DIR}/.editorconfig.default" "$ROOT_DIR.editorconfig"
        display_success_item "EditorConfig created"
    else
        display_warning "Default .editorconfig not found"
    fi

    echo ""
    sleep 0.5
    return 0
}

# Install plugins
install_plugins() {
    display_step 8 $TOTAL_STEPS "Installing Vim plugins"

    echo ""
    display_info "This may take a few minutes..."
    echo ""

    # Run vim in the background to install plugins
    vim +PlugInstall +qall &> /tmp/vim_plugin_install.log &
    local vim_pid=$!

    # Show spinner while installing
    local spin='-\|/'
    local i=0
    while kill -0 $vim_pid 2>/dev/null; do
        i=$(( (i+1) %4 ))
        printf "\r  ${CYAN}${spin:$i:1}${RESET} Installing plugins..."
        sleep 0.1
    done

    wait $vim_pid
    local exit_code=$?

    printf "\r"

    if [ $exit_code -eq 0 ]; then
        # Count installed plugins
        local plugin_count=0
        if [ -d "$HOME/.vim/plugged" ]; then
            plugin_count=$(ls -1 "$HOME/.vim/plugged" 2>/dev/null | wc -l)
        fi

        display_success_item "Installed $plugin_count plugins"
        echo ""
        sleep 0.5
        return 0
    else
        display_warning "Some plugins may have failed"
        display_info "Run ':PlugInstall' in Vim to retry"
        echo ""
        return 1
    fi
}

# Install LSP servers
install_lsp_servers() {
    display_step 9 $TOTAL_STEPS "Installing LSP servers"

    echo ""

    if [ ! -f "${BASE_DIR}/install-lsp" ]; then
        display_warning "LSP install script not found"
        display_info "You can install language servers later with :LspInstallServer"
        echo ""
        return 0
    fi

    display_prompt "Install language servers now?" "y"
    read -r response
    echo ""

    if [[ $response =~ ^[Yy]$ ]]; then
        chmod +x "${BASE_DIR}/install-lsp"
        "${BASE_DIR}/install-lsp"
    else
        display_info "Skipped LSP installation"
        display_info "Run './script/install-lsp' anytime to install"
        echo ""
    fi

    return 0
}

# Verify installation
verify_installation() {
    display_divider
    display_header "Verification"

    local all_ok=true

    # Check Vim
    if command -v vim &> /dev/null; then
        display_success_item "Vim executable"
    else
        display_error "Vim not found"
        all_ok=false
    fi

    # Check .vimrc
    if [ -L "$HOME/.vimrc" ] && [ -f "$HOME/.vimrc" ]; then
        display_success_item ".vimrc symlink"
    else
        display_error ".vimrc symlink"
        all_ok=false
    fi

    # Check vim-plug
    if [ -f "$PLUG_VIM" ]; then
        display_success_item "vim-plug"
    else
        display_error "vim-plug"
        all_ok=false
    fi

    # Check plugins
    if [ -d "$HOME/.vim/plugged" ]; then
        local count=$(ls -1 "$HOME/.vim/plugged" 2>/dev/null | wc -l)
        display_success_item "Plugins ($count installed)"
    else
        display_warning "Plugin directory"
        all_ok=false
    fi

    echo ""

    if $all_ok; then
        return 0
    else
        return 1
    fi
}

# ═══════════════════════════════════════════════════════════════
# Main Entry Point
# ═══════════════════════════════════════════════════════════════

main() {
    # Display banner
    display_banner

    display_box "VEX Setup - Vim Ecosystem Extension" "$CYAN"

    echo ""
    display_divider

    # Run installation steps
    local failed=false

    check_prerequisites || failed=true

    if ! $failed; then
        install_vim || failed=true
    fi

    if ! $failed; then
        backup_existing_config || true  # Non-critical
        create_directories || failed=true
    fi

    if ! $failed; then
        install_vim_plug || failed=true
        setup_vimrc || failed=true
        setup_default_configs || true  # Non-critical
    fi

    if ! $failed; then
        install_plugins || true  # Continue even if some plugins fail
    fi

    if ! $failed; then
        install_lsp_servers || true  # Optional
    fi

    if verify_installation; then
        display_completion "VEX installed successfully!"
        echo ""
    else
        display_error "Installation completed with warnings"
        display_info "Some components may need manual setup"
        echo ""
    fi
}

# Run main function
main "$@"
